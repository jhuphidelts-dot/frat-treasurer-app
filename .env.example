# Copy this to .env and fill in your actual credentials

# SMS Configuration - Choose ONE option:

# OPTION 1: Twilio (Paid - $15/month for phone number + per-message fees)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# OPTION 2: Free SMS via Gmail (Recommended - Completely FREE!)
# Just need a Gmail account with app password
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# Google Sheets Integration (Optional)
GOOGLE_CREDENTIALS_PATH=./google_credentials.json
GOOGLE_SHEETS_ID=your_google_sheets_id_here

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-change-this
